/* pages/editRec/editRec.wxss */

.container {
  background: #face0d23;
  padding-top: 30px;
  padding-bottom: 120px;
  /*margin: 30rpx;*/
}

.appointment-info {
  background: #fff;
  font-size: 30rpx;
  border-radius: 14rpx;
  border-color: transparent;
  box-shadow: 1px 2px 10px 2px rgba(170, 170, 170, 0.21);
  margin: 30rpx;
}

.appointment {
  position: relative;
}

.inputField {
  padding: 10px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  border-bottom: 1px solid #e5e5e5;
}

.inputField .label {
  width: 160rpx;
  color: gray;
}

.inputField .field {
  flex: 2 0 10%;
}

.paddingUp {
  padding-top: 40rpx;
}

.images {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}

.single {
  margin: 3rpx;
  width: 100rpx;
  height: 100rpx;
  border: 3px solid #face0d;
  align-content: center;
  align-items: center;
}

.singleButton {
  text-align: center;
  font-size: 60rpx;
  color: #face0d;
  margin: 3rpx;
  width: 100rpx;
  height: 100rpx;
  border: 3px solid #face0d;
  align-content: center;
  align-items: center;
}

.addButton {
  font-size: 32rpx;
  background: #face0d!important;
  margin-left: 30rpx;
  margin-right: 30rpx;
}